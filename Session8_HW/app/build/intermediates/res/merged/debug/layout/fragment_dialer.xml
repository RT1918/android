<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="raijin.session8_hw.DialerFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp">
        <EditText android:id="@+id/number_edit_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"/>
        <Button android:id="@+id/delete_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_backspace_black_48dp"
            />
    </LinearLayout>

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="6"></LinearLayout>-->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:columnCount="3"
        android:rowCount="4">
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"

            android:text="1"
            android:textSize="@dimen/number_button_text_size"
            android:id="@+id/button_1"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="2"
            android:textSize="@dimen/number_button_text_size"
            android:id="@+id/button_2"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="3"
            android:textSize="@dimen/number_button_text_size"
            android:id="@+id/button_3"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="4"
            android:textSize="@dimen/number_button_text_size"
            android:id="@+id/button_4"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="5"
            android:textSize="@dimen/number_button_text_size"
            android:id="@+id/button_5"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="6"
            android:textSize="@dimen/number_button_text_size"
            android:id="@+id/button_6"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="7"
            android:textSize="@dimen/number_button_text_size"
            android:id="@+id/button_7"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="8"
            android:textSize="@dimen/number_button_text_size"
            android:id="@+id/button_8"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="9"
            android:textSize="@dimen/number_button_text_size"
            android:id="@+id/button_9"
            android:layout_row="2"
            android:layout_column="2" />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="*"
            android:textSize="@dimen/number_button_text_size"
            android:id="@+id/button_star"
            android:layout_row="3"
            android:layout_column="0" />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="0"
            android:textSize="@dimen/number_button_text_size"
            android:id="@+id/button_0"
            android:layout_row="3"
            android:layout_column="1" />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="#"

            android:textSize="@dimen/number_button_text_size"
            android:id="@+id/button_hashtag"
            android:layout_row="3"
            android:layout_column="2" />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="SIM 1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_call_black_48dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="SIM 2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_call_black_48dp"/>
    </LinearLayout>


</LinearLayout>
