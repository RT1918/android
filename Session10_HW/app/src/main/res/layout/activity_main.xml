<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="raijin.session10_hw.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/holo_blue_dark"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_marginBottom="30dp"></android.support.v7.widget.Toolbar>

    <EditText android:id="@+id/location_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your location"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/toolbar"/>
    <TextView android:id="@+id/show_on_map_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Show on maps:"
        android:layout_below="@id/location_edit_text"
        android:textSize="@dimen/normal_text_size"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/show_on_map_button"
        android:gravity="center_vertical"/>
    <Button android:id="@id/show_on_map_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/show_on_map_text"
        android:text="Show"
        android:layout_below="@id/location_edit_text"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"/>
    <TextView android:id="@+id/show_direction_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Navigation:\nChoose travel method:"
        android:layout_below="@id/show_on_map_text"
        android:textSize="@dimen/normal_text_size"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/driving_button"
        android:gravity="center_vertical"/>
    <Button android:id="@id/driving_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/show_on_map_text"
        android:text="Driving"
        android:layout_below="@id/show_on_map_text"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"/>
    <Button android:id="@+id/walking_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/show_on_map_text"
        android:text="Walking"
        android:layout_below="@id/driving_button"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"/>
    <Button android:id="@+id/bicycling_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/show_on_map_text"
        android:text="Bicycling"
        android:layout_below="@id/walking_button"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"/>

</RelativeLayout>
