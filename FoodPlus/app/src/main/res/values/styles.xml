<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textTitleBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="textTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="textTitleLight">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="textDescription">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--HUNG-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="MyImageView">
        <item name="android:background">#d6daa8</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="MenuTextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="BlackBoldTextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WhiteBoldTextViewBig">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="WhiteBoldTextView">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SelectableBackground">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!--RatingBar-->
    <style name="Widget.MaterialRatingBar.RatingBar" parent="android:Widget.RatingBar">
        <item name="android:indeterminateDrawable">@null</item>
        <item name="android:minHeight">@dimen/_30sdp</item>
        <item name="android:maxHeight">@dimen/_30sdp</item>
    </style>

    <style name="Widget.MaterialRatingBar.RatingBar.Large">
        <item name="android:minHeight">@dimen/_23sdp</item>
        <item name="android:maxHeight">@dimen/_23sdp</item>
    </style>

    <style name="Widget.MaterialRatingBar.RatingBar.Normal">
        <item name="android:minHeight">@dimen/_15sdp</item>
        <item name="android:maxHeight">@dimen/_15sdp</item>
    </style>

    <style name="Widget.MaterialRatingBar.RatingBar.Small">
        <item name="android:minHeight">@dimen/_13sdp</item>
        <item name="android:maxHeight">@dimen/_13sdp</item>
    </style>

    <style name="Widget.MaterialRatingBar.RatingBar.Smaller">
        <item name="android:minHeight">@dimen/_10sdp</item>
        <item name="android:maxHeight">@dimen/_10sdp</item>
    </style>

    <style name="Widget.MaterialRatingBar.RatingBar.Indicator">
        <item name="android:isIndicator">true</item>
    </style>

    <style name="Widget.MaterialRatingBar.RatingBar.Indicator.Small">
        <item name="android:minHeight">@dimen/_13sdp</item>
        <item name="android:maxHeight">@dimen/_13sdp</item>
    </style>

    <!--TabLayout-->
    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#cccccc</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="NavText">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:padding">@dimen/_3sdp</item>
    </style>

    <!--DIALOG ANIM-->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/go_up</item>
        <item name="android:windowExitAnimation">@anim/go_down</item>
    </style>

    <style name="DialogFullscreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
