<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorBackground"
              android:orientation="vertical"
              android:padding="@dimen/_5sdp">

    <com.online.foodplus.widgets.InfoText
        android:id="@+id/info_text_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.online.foodplus.widgets.InfoText
        android:id="@+id/info_text_name"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.online.foodplus.widgets.InfoText
        android:id="@+id/info_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"/>

    <com.online.foodplus.widgets.InfoText
        android:id="@+id/info_text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"/>

    <com.online.foodplus.widgets.InfoText
        android:id="@+id/info_text_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/_5sdp">

        <TextView
            style="@style/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:text="@string/gioi_tinh"
            android:textSize="@dimen/_11sdp"/>

        <RadioGroup
            android:id="@+id/rgGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioMale"
                style="@style/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:buttonTint="#92b853"
                android:enabled="false"
                android:text="Nam"
                android:textSize="@dimen/_11sdp"
                android:textStyle="normal"/>

            <RadioButton
                android:id="@+id/radioFemale"
                style="@style/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#92b853"
                android:enabled="false"
                android:text="Ná»¯"
                android:textSize="@dimen/_11sdp"
                android:textStyle="normal"/>
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/rounded_main_color"
        android:text="@string/chinh_sua"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"/>

</LinearLayout>